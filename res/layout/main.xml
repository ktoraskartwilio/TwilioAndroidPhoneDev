<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="fill_vertical|center_horizontal"
    android:orientation="vertical" 
    android:background="#FAFAFA">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/countryCodeSpinner"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/usflag"
            android:singleLine="true" />

        <EditText
            android:id="@+id/numberField"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/clearTextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/backspaceimage"
            android:singleLine="true"
            android:visibility="visible" />
    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="1.00" 
        android:layout_weight="1" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="0dp"
            android:paddingTop="0dp" >

            <Button
                android:id="@+id/dialKey1"
                style="@style/button_dialpad"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.33"
                android:enabled="true"
                android:gravity="fill_vertical|center_horizontal"
                android:text="@string/dialPad1" />

            <Button
                android:id="@+id/dialKey2"
                style="@style/button_dialpad"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.33"
                android:text="@string/dialPad2" />

            <Button
                android:id="@+id/dialKey3"
                style="@style/button_dialpad"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.33"
                android:text="@string/dialPad3" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:stretchColumns="0,1,2"
        android:weightSum="1.00" 
        android:layout_weight="1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="0dp"
            android:paddingTop="0dp" >

            <Button
                android:id="@+id/dialKey4"
                style="@style/button_dialpad"
                android:layout_width="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.33"
                android:text="@string/dialPad4" />

            <Button
                android:id="@+id/dialKey5"
                style="@style/button_dialpad"
                android:layout_width="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.33"
                android:text="@string/dialPad5" />

            <Button
                android:id="@+id/dialKey6"
                style="@style/button_dialpad"
                android:layout_width="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.33"
                android:text="@string/dialPad6" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:stretchColumns="0,1,2"
        android:weightSum="1.00" 
        >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingTop="0dp" >

            <Button
                android:id="@+id/dialKey7"
                style="@style/button_dialpad"
                android:layout_width="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.33"
                android:text="@string/dialPad7" />

            <Button
                android:id="@+id/dialKey8"
                style="@style/button_dialpad"
                android:layout_width="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.33"
                android:text="@string/dialPad8" />

            <Button
                android:id="@+id/dialKey9"
                style="@style/button_dialpad"
                android:layout_width="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.33"
                android:text="@string/dialPad9" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:stretchColumns="0,1,2"
        android:weightSum="1.00" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="0dp" >

            <Button
                android:id="@+id/dialKeyPound"
                style="@style/button_dialpad"
                android:layout_width="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.33"
                android:text="@string/dialPadPound" />

            <Button
                android:id="@+id/dialKey0"
                style="@style/button_dialpad"
                android:layout_width="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.33"
                android:text="@string/dialPad0" />

            <Button
                android:id="@+id/dialKeyStar"
                style="@style/button_dialpad"
                android:layout_width="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.33"
                android:text="@string/dialPadStar" />
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonCall"
            style="@style/button_call"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/callBtnTxt" />

        <Button
            android:id="@+id/buttonHangup"
            style="@style/button_hangup"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/hangupBtnTxt"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>